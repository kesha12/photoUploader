<div class="page-header w3-center"><h1>Upload Photo</h1></div>

<%= form_for @photo do |f| %>
<div class="w3-card-4 w3-margin-64">
<div class="w3-card-4 w3-red w3-margin-32">
  <%= render 'shared/errors', object: @photo %></div>

 <div class="form-group w3-margin-32">
    <%= f.label :title ,class: 'w3-text-red w3-xlarge'%>
    <%= f.text_field :title, class: 'w3-input form-control' %>
  </div>
  <div clas="form-group w3-margin-32">

    <%= f.label :description, class: 'w3-text-red w3-xlarge' %>
    <%= f.text_area :description, size: "30x8" ,class: 'w3-input form-control' %>


  </div>

  <div class="form-group w3-margin-32">
    <%= f.label :image , class: 'w3-text-red w3-xlarge'%>
    <%= f.file_field :image, class: 'form-control'%>
  </div>
<div class="w3-center w3-margin-32">
  <%= f.submit 'Upload', class: 'w3-btn' %></div>
  <br />

<% end %>
</div>